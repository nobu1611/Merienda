<div class="container mt-5">
  <h1 class="mb-4">新しいレシピを作成</h1>

  <%= form_with model: @recipe, url: recipes_path do |form| %>
    <div class="form-group">
      <%= form.label :title, 'レシピ名', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', required: '' %>
    </div>

    <div class="form-group">
      <%= form.label :notes, 'メモ', class: 'form-label' %>
      <%= form.text_area :notes, class: 'form-control', rows: '5', required: '' %>
    </div>

    <div class="actions mt-3">
      <%= form.submit 'レシピを作成', class: 'btn btn-success btn-lg btn-block' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to '戻る', request.referer || root_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
