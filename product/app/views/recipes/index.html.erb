<!-- app/views/recipes/index.html.erb -->
<h1>レシピ一覧</h1>

<div class="contaner">
<div class="row">
<div class="col-sm-5">
<%= link_to 'レシピを書く', new_recipe_path, class: "btn btn-primary btn-block mb-3" %>
</div>
<div class="col-sm-5">
<%= link_to '材料一覧', ingredients_path, class: "btn btn-secondary btn-block mb-3" %>
</div>
</div>
</div>


<table class="table table-striped">
  <% @recipes.each_with_index do |recipe, index| %>
    <tr>
      <td><%= index + 1 %>.<%= link_to recipe.title, recipe %></td>
      <td>
        <%= link_to '編集', edit_recipe_path(recipe), class: "btn btn-outline-secondary btn-sm mr-2" %>
        <%= link_to '削除', recipe, class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "削除してよろしいですか？" } %>
      </td>
    </tr>
  <% end %>
</table>
