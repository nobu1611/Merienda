<h1>すべて Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'Show', users_path(user) %></td>
      <td><%= link_to 'Edit',  edit_user_password_path(user) %></td>
      <td><%= link_to 'Delete', destroy_user_session_path(user.id), turbomethod: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New User', new_user_session_path %>
